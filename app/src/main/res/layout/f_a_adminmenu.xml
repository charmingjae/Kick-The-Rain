        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="관리자 메뉴"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnGolst"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="0"
            android:background="@drawable/btn_radius_borrow_umb"
            android:text="대여 명단 보기"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/btnLstOverdue"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="0"
            android:background="@drawable/btn_radius_borrow_umb"
            android:text="연체자 명단 보기"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/btnSetUmbCnt"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="0"
            android:background="@drawable/btn_radius_borrow_umb"
            android:text="우산 재고 수정"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/btnShowRatio"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="0"
            android:background="@drawable/btn_radius"
            android:text="비율 보기"
            android:textColor="@color/colorPrimary" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
